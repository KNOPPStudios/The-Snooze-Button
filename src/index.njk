<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>The Snooze Button</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="skin-orange">
  <header><h1>The Snooze Button</h1></header>

  <section id="featured">
    {% set hero = home and home.hero %}
    {% set firstPost = (collections.posts and collections.posts.length) ? collections.posts[0] : null %}

    {% if hero and hero.url %}
      <article>
        {% if hero.image %}<img src="{{ hero.image | url }}" alt="{{ hero.title }}">{% endif %}
        <div class="category">{{ hero.category or 'Podcast' }}</div>
        <h2><a href="{{ hero.url }}">{{ hero.title }}</a></h2>
        {% if hero.date %}<div class="time">{{ hero.date }}</div>{% endif %}
      </article>
    {% elseif firstPost %}
      <article>
        {% if firstPost.data.hero %}<img src="{{ firstPost.data.hero | url }}" alt="{{ firstPost.data.title }}">{% endif %}
        <div class="category">{{ (firstPost.data.tags and firstPost.data.tags[0]) or 'Podcast' }}</div>
        <h2><a href="{{ firstPost.url | url }}">{{ firstPost.data.title }}</a></h2>
        <div class="time">{{ firstPost.date | date("MMMM d, yyyy") }}</div>
      </article>
    {% else %}
      <p>Add a hero in Admin â†’ Homepage or create your first Post.</p>
    {% endif %}
  </section>

  <section id="latest">
    <h3>Latest Episodes</h3>
    {% if collections.posts and collections.posts.length %}
      {% for p in collections.posts | slice(0, home.latest_count or 4) %}
      <article>
        <h4><a href="{{ p.url | url }}">{{ p.data.title }}</a></h4>
        {% if p.data.hero %}<img src="{{ p.data.hero | url }}" alt="{{ p.data.title }}">{% endif %}
        <div class="time">{{ p.date | date("MMMM d, yyyy") }}</div>
      </article>
      {% endfor %}
    {% else %}
      <p>No posts yet.</p>
    {% endif %}
  </section>

  <p><a href="/admin/">Go to Admin</a></p>
</body>
</html>
